<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    app:cardBackgroundColor="#327fa8"
    >
    <!-- Constraint layout /-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/levelx_Constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Gate icon /-->
        <ImageView
            android:id="@+id/levelx_imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/level_icon_description"

            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/levelx_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Level text /-->
        <TextView
            android:id="@+id/levelx_name"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:textSize="50sp"
            android:fontFamily="@font/font_arcadeclassic"
            app:layout_constraintHorizontal_bias="0.4"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/levelx_imageView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>